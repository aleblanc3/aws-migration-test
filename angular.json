{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "content-assistant": {
      "i18n": {
        "sourceLocale": "en-CA",
        "locales": {
          "fr": {
            "translation": "src/locale/messages.fr.json"
          }
        }
      },
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "ca",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/content-assistant",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js",
              "@angular/localize/init"
            ],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "node_modules/primeflex/primeflex.css",
              "node_modules/primeicons/primeicons.css",
              "src/styles.css",
              "diff2html/bundles/css/diff2html.min.css"
            ],
            "scripts": [
              "node_modules/underscore/underscore-min.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/app/views/my-test/test.component.ts",
                  "with": "src/app/views/example/test.component.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2.4MB",
                  "maximumError": "3MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all",
              "allowedCommonJsDependencies": [
                "prettier/parser-html",
                "prismjs",
                "diff",
                "diff2html/lib/ui/js/diff2html-ui-slim",
                "highlight.js",
                "hogan.js",
                "mammoth",
                "bluebird/js/release/promise",
                "jszip",
                "@xmldom",
                "dingbat-to-unicode",
                "xmlbuilder",
                "lop",
                "base64-js"
              ]
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "content-assistant:build:production"
            },
            "development": {
              "buildTarget": "content-assistant:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing",
              "@angular/localize/init"
            ],
            "tsConfig": "tsconfig.spec.json",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.css"
            ],
            "scripts": [
              "node_modules/underscore/underscore-min.js"
            ]
          }
        }
      }
    }
  }
}