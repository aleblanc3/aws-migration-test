{
  "name": "content-assistant",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "predeploy": "ng build --configuration production --base-href /content-assistant/",
    "deploy": "npx angular-cli-ghpages --dir=dist/content-assistant/browser --no-silent",
    "predeploydev": "ng build --configuration development --base-href /content-assistant/",
    "deploydev": "npx angular-cli-ghpages --dir=dist/content-assistant/browser --branch=gh-pages-dev",
    "predeployprod": "ng build --configuration production --base-href /content-assistant/",
    "deployprod": "npx angular-cli-ghpages --dir=dist/content-assistant/browser --branch=gh-pages-dev",
    "i18n:init": "ngx-translate-extract --input ./src --output ./public/i18n/template.json --key-as-default-value --replace --format json",
    "i18n:extract": "ngx-translate-extract --input ./src --output ./public/i18n/en.json ./public/i18n/fr.json --format json",
    "i18n:new": "ngx-translate-extract --input ./src --output ./public/i18n/en-new.json ./public/i18n/fr-new.json --clean --sort --format json",
    "checksize": "ng build --configuration production --base-href /content-assistant/ --stats-json && node scripts/check-size.js"
  },
  "private": true,
  "dependencies": {
    "@ali-tas/htmldiff-js": "^2.0.1",
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@fortawesome/angular-fontawesome": "^1.0.0",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@ngx-translate/core": "^16.0.4",
    "@ngx-translate/http-loader": "^16.0.1",
    "@primeng/themes": "^19.1.3",
    "diff": "^8.0.2",
    "diff2html": "^3.4.51",
    "jszip": "^3.10.1",
    "mammoth": "^1.9.1",
    "pdfjs-dist": "^5.3.31",
    "prettier": "^3.6.2",
    "primeflex": "^4.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^19.1.3",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.14",
    "@angular/cli": "^19.2.14",
    "@angular/compiler-cli": "^19.2.0",
    "@angular/localize": "^19.2.0",
    "@colsen1991/ngx-translate-extract-marker": "^3.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/prismjs": "^1.26.5",
    "@vendure/ngx-translate-extract": "^9.4.0",
    "angular-cli-ghpages": "^2.0.3",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2"
  }
}